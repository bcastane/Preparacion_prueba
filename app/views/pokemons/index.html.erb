<p id="notice"><%= notice %></p>

<h1>Listing Pokemons</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Nivel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pokemons.each do |pokemon| %>
      <tr>
    
        <td><%= pokemon.nombre %></td>
        <td><%= pokemon.descripcion %></td>
        
      <td><%= pokemon.user_pokemons.collect(&:nivel).first %></td>
       
        <td><%= link_to 'Show', pokemon %></td>
        <td><%= link_to 'Edit', edit_pokemon_path(pokemon) %></td>
        <td><%= link_to 'Destroy', pokemon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Level Up', pokemon, method: :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pokemon', new_pokemon_path %>
